    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context="co.edu.udea.compumovil.gr03_20171.lab2activities.RegisterActivity"
    >

    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:text="Crear una Cuenta"
         android:textAlignment="center"
         android:textColor="#ffffff"
         android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
         android:textSize="35dp"
         android:typeface="serif"/>-->+

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView android:id="@+id/tvRegistrar"
            android:background="@drawable/ic_assignment_black_24dp"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_weight="0.23" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <EditText android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Nombre de evento"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#9C2380"
                android:typeface="serif"
                android:padding="10dp"/>

            <EditText android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Descripci贸n"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="#9C2380"
                android:typeface="serif"
                android:padding="10dp"/>

            <EditText android:id="@+id/puntuacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Puntuaci贸n"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="#9C2380"
                android:typeface="serif"
                android:padding="10dp"
                android:inputType="number" />

            <EditText android:id="@+id/responsable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Responsable"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="#9C2380"
                android:typeface="serif"
                android:padding="10dp" />

            <EditText android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Fecha"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="#9C2380"
                android:typeface="serif"
                android:padding="10dp" />

            <EditText android:id="@+id/ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Ubicaci贸n"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="#9C2380"
                android:typeface="serif"
                android:padding="10dp" />

            <EditText android:id="@+id/infoGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Informaci贸n General"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="#9C2380"
                android:typeface="serif"
                android:padding="10dp" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <Button android:id="@+id/boton"
                android:text="Crear Evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:typeface="serif"
                android:onClick="crearEvento"/>



        </LinearLayout>
    </LinearLayout>



</ScrollView>








